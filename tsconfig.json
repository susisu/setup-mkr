{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "incremental": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": ["es2022"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
