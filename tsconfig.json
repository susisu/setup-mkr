{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
